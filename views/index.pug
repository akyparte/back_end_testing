html
    head
        meta(charset="utf-8")
        title chat app
        meta(name="viewport" content="width=device-width, initial-scale=1")
        script(src="https://code.jquery.com/jquery-1.10.2.min.js")
        link(href="https://cdn.jsdelivr.net/npm/bootstrap@4.5.0/dist/css/bootstrap.min.css" rel="stylesheet")
        script(src="https://cdn.jsdelivr.net/npm/bootstrap@4.5.0/dist/js/bootstrap.bundle.min.js")
        link(rel="stylesheet" href="chat_style.css")
        script(src="/socket.io/socket.io.js")
    body
        link(href="https://maxcdn.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css" rel="stylesheet")
        div(class="container")
            div(class="row clearfix")
                div(class="col-lg-12")
                    div(class="card chat-app")
                        //- img(src="no-chats.svg" id ="no-chat-show")
                        div(id="plist" class="people-list")
                            div(class="input-group")
                                div(class="input-group-prepend")
                                    span(class="input-group-text")
                                        i(class="fa fa-search")
                                input(type="text" class="form-control" placeholder="Search...")
                            ul(id = 'friends' class="list-unstyled chat-list mt-2 mb-0"  style="overflow-y: auto;height: 580px;")
                                if friends.length
                                    each friend in friends
                                        li(class="clearfix")
                                            img(src=friend.profileUrl alt="avatar")
                                            div(class="about")
                                                div(class="name")=friend.name
                                                div(class="status")
                                                    i(class="fa fa-circle offline")
                                                    . 
                                                       !{" "}left 7 Mins ago
                        div(class="chat" id = 'chat-showing-box')
                            div(class="chat-header clearfix")
                                div(class="row")
                                    div(class="col-lg-6")
                                        a(href="javascript:void(0);" data-toggle="modal" data-target="#view_info")
                                            img(src="https://bootdey.com/img/Content/avatar/avatar2.png" alt="avatar")
                                        div(class="chat-about")
                                            h6(class="m-b-0") name
                                            small Last seen: 2 hours ago
                                    div(class="col-lg-6 hidden-sm text-right")
                                        a(href="javascript:void(0);" class="btn btn-outline-secondary")
                                            img(src="./user-solid.svg" style="width: 40px;height:30px;" alt="")
                                        a(href="javascript:void(0);" class="btn btn-outline-primary")
                                            img(src="./user-plus-solid.svg" style="width: 40px;height:30px;" alt="")
                            div(class="chat-history" style="overflow-y: auto;height:500px")
                                ul(class="m-b-0" style="visibility: hidden;")
                            div(class="chat-message clearfix" style="visibility: hidden;")
                                div(class="input-group mb-0")
                                    div(class="input-group-prepend" id="send-mess-btn")
                                        span(class="input-group-text")
                                            i(class="fa fa-send")
                                    input(type="text" class="form-control" placeholder="Enter text here...")